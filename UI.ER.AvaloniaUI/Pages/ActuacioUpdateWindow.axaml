<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:material="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
        xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
        xmlns:assists="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
        xmlns:wpf="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
        xmlns:controls="clr-namespace:UI.ER.AvaloniaUI.Controls"
        x:Class="UI.ER.AvaloniaUI.Pages.ActuacioUpdateWindow"
        HorizontalContentAlignment="Stretch"
        Title="Actuació, detall i modificació de dades"        
        Width="1100" Height="700" MinWidth="720"
        WindowStartupLocation="CenterOwner"
        >

    <Grid>
    <ScrollViewer>
        <StackPanel Orientation="Vertical"
                    Margin="24, 20">

            <!-- ==================== DADES DE L'ACTUACIÓ ==================== -->
            <Border Background="#F5F7FA" CornerRadius="8" Padding="20" Margin="0,0,0,16"
                    BorderBrush="#E0E0E0" BorderThickness="1">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <avalonia:MaterialIcon Kind="CalendarClock" Width="22" Height="22" 
                                               Foreground="{DynamicResource PrimaryHueMidBrush}" Margin="0,0,10,0"/>
                        <TextBlock Text="Dades de l'actuació" Classes="Subtitle1" FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    </StackPanel>
                    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="1*,1*">
                        <controls:DateInput Grid.Row="0" Grid.Column="0" Margin="6,4"
                                    DateText="{Binding MomentDeLactuacioTxt}"
                                    Label="Data de l'actuació (dd.mm.aaaa)" />
                        <controls:LookupInput Grid.Row="0" Grid.Column="1" Margin="6,4"
                                    Text="{Binding CursActuacioTxt}"
                                    Label="Curs de l'actuació"
                                    LookupCommand="{Binding CursActuacioLookupCommand}"
                                    ClearCommand="{Binding CursActuacioClearCommand}" />
                        <controls:LookupInput Grid.Row="1" Grid.Column="0" Margin="6,4"
                                    Text="{Binding TipusActuacioTxt}"
                                    Label="Tipus d'actuació"
                                    LookupCommand="{Binding TipusActuacioLookupCommand}"
                                    ClearCommand="{Binding TipusActuacioClearCommand}" />
                        <TextBox Grid.Row="1" Grid.Column="1" Margin="6,4"
                                       UseFloatingWatermark="True"
                                       Classes="Filled"
                                       wpf:TextFieldAssist.Label="Minuts emprats"
                                       Text="{Binding MinutsDuradaActuacioTxt}"/>
                        <TextBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="6,4"
                                    Text="{Binding ObservacionsTipusActuacio}"
                                    AcceptsReturn="True"
                                    TextWrapping="Wrap"
                                    MinHeight="50"
                                    UseFloatingWatermark="True"
                                    Classes="Filled"
                                    wpf:TextFieldAssist.Label="Observacions sobre el tipus d'actuació" />
                    </Grid>
                </StackPanel>
            </Border>

            <!-- ==================== ALUMNE I CONTEXT ==================== -->
            <Border Background="#E8F5E9" CornerRadius="8" Padding="20" Margin="0,0,0,16"
                    BorderBrush="#C8E6C9" BorderThickness="1">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <avalonia:MaterialIcon Kind="AccountSchoolOutline" Width="22" Height="22" 
                                               Foreground="#2E7D32" Margin="0,0,10,0"/>
                        <TextBlock Text="Alumne i context" Classes="Subtitle1" FontWeight="SemiBold"
                                   Foreground="#2E7D32"/>
                    </StackPanel>
                    <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="1*,1*">
                        <controls:LookupInput Grid.Row="0" Grid.Column="0" Margin="6,4"
                                    Text="{Binding AlumneTxt}"
                                    Label="Alumne"
                                    LookupCommand="{Binding AlumneLookupCommand}"
                                    ClearCommand="{Binding AlumneClearCommand}" />
                        <controls:LookupInput Grid.Row="0" Grid.Column="1" Margin="6,4"
                                    Text="{Binding CentreTxt}"
                                    Label="Centre de l'alumne al moment de l'actuació"
                                    LookupCommand="{Binding CentreLookupCommand}"
                                    ClearCommand="{Binding CentreClearCommand}" />
                        <controls:LookupInput Grid.Row="1" Grid.Column="0" Margin="6,4"
                                    Text="{Binding EtapaAlMomentDeLactuacioTxt}"
                                    Label="Etapa al moment de l'actuació"
                                    LookupCommand="{Binding EtapaAlMomentDeLactuacioLookupCommand}"
                                    ClearCommand="{Binding EtapaAlMomentDeLactuacioClearCommand}" />
                        <TextBox Grid.Row="1" Grid.Column="1" Margin="6,4"
                            Text="{Binding NivellAlMomentDeLactuacio}"
                            UseFloatingWatermark="True"
                            Classes="Filled"
                            wpf:TextFieldAssist.Label="Nivell al moment de l'actuació (ex: 1r)" />
                    </Grid>
                </StackPanel>
            </Border>

            <!-- ==================== DESCRIPCIÓ ==================== -->
            <Border Background="#F5F7FA" CornerRadius="8" Padding="20" Margin="0,0,0,16"
                    BorderBrush="#E0E0E0" BorderThickness="1">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <avalonia:MaterialIcon Kind="TextBoxOutline" Width="22" Height="22" 
                                               Foreground="{DynamicResource PrimaryHueMidBrush}" Margin="0,0,10,0"/>
                        <TextBlock Text="Descripció" Classes="Subtitle1" FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    </StackPanel>
                    <TextBox Text="{Binding DescripcioActuacio}"
                                AcceptsReturn="True"
                                TextWrapping="Wrap"
                                MinHeight="80"
                                UseFloatingWatermark="True"
                                Classes="Filled"
                                wpf:TextFieldAssist.Label="Descripció de l'actuació" />
                </StackPanel>
            </Border>

            <ItemsControl Margin="10,5,10,5" ItemsSource="{Binding BrokenRules}">            
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Classes="Error" Text="{Binding}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- ==================== BOTÓ ESBORRAR ==================== -->
            <Button
                Margin="6,20,6,10"
                Classes="Flat"
                Foreground="#D32F2F"
                Command="{Binding DeleteCommand}"
                ToolTip.Tip="Esborrar aquesta actuació">
                <StackPanel Orientation="Horizontal">
                    <avalonia:MaterialIcon Kind="DeleteOutline" Width="20" Height="20" />
                    <TextBlock Margin="8,0,0,0" Text="Esborrar" VerticalAlignment="Center" />
                </StackPanel>
            </Button>

            <!-- Espai perquè el FAB no tapi contingut -->
            <Border Height="80" />

        </StackPanel>

    </ScrollViewer>

        <!-- ==================== FAB DESAR ==================== -->
        <material:FloatingButton
            HorizontalAlignment="Right" VerticalAlignment="Bottom"
            Margin="0,0,24,24"
            IsExtended="True"
            Command="{Binding SubmitCommand}"
            HotKey="Ctrl+S"
            ToolTip.Tip="Desar els canvis (Ctrl+S)">
            <material:FloatingButton.Content>
                <StackPanel Orientation="Horizontal" Height="24">
                    <Viewbox Stretch="Fill" VerticalAlignment="Stretch">
                        <avalonia:MaterialIcon Kind="ContentSave" Width="24" Height="24" />
                    </Viewbox>
                    <TextBlock Margin="8,0" Text="Desar" Classes="Subtitle2"
                               VerticalAlignment="Center" />
                </StackPanel>
            </material:FloatingButton.Content>
        </material:FloatingButton>

    </Grid>
</Window>