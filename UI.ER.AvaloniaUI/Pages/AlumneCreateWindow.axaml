<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:material="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
        xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
        xmlns:assists="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
        xmlns:wpf="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
        xmlns:controls="clr-namespace:UI.ER.AvaloniaUI.Controls"
        x:Class="UI.ER.AvaloniaUI.Pages.AlumneCreateWindow"
        HorizontalContentAlignment="Stretch"
        Title="Alumne, alta"        
        Width="1100" Height="600" MinWidth="720"
        WindowStartupLocation="CenterOwner"
        >

    <ScrollViewer>
        <StackPanel Orientation="Vertical"
                    Margin="16, 16">
            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,*,*"
                  ColumnDefinitions="1*,1*">

                <!-- 0 -->

                <TextBox Grid.Row="0" Grid.Column="0" Margin="10,5,10,5"
                            Text="{Binding Nom}"
                            UseFloatingWatermark="True"
                            Classes="Filled"
                            wpf:TextFieldAssist.Label="Nom" />

                <TextBox Grid.Row="0" Grid.Column="1" Margin="10,5,10,5"
                            Text="{Binding Cognoms}"
                            UseFloatingWatermark="True"
                            Classes="Filled"
                            wpf:TextFieldAssist.Label="Cognoms" />

                <!-- 1 -->

                <controls:DateInput Grid.Row="1" Grid.Column="0" Margin="10,5,10,5"
                            DateText="{Binding DataNaixementTxt}"
                            Label="Data naixement (dd.mm.aaaa)" />

                <TextBox Grid.Row="1" Grid.Column="1" Margin="10,5,10,5"
                            Text="{Binding Tags}"
                            UseFloatingWatermark="True"
                            Classes="Filled"
                            wpf:TextFieldAssist.Label="Tags (paraules clau per cercar)" />

                <!-- 2 -->

                <controls:LookupInput Grid.Row="2" Grid.Column="0" Margin="10,5,10,5"
                            Text="{Binding CursDarreraActualitacioDadesTxt}"
                            Label="Curs Darrera ActualitzaciÃ³ Dades"
                            LookupCommand="{Binding CursDarreraActualitacioDadesLookupCommand}"
                            ClearCommand="{Binding CursDarreraActualitacioDadesClearCommand}" />

                <TextBox Grid.Row="2" Grid.Column="1" Margin="10,5,10,5"
                            Text="{Binding NivellActual}"
                            UseFloatingWatermark="True"
                            Classes="Filled"
                            wpf:TextFieldAssist.Label="Nivell actual (exs: 1, 1r, AO, ...)" />

                <!-- 3 -->

                <controls:LookupInput Grid.Row="3" Grid.Column="0" Margin="10,5,10,5"
                            Text="{Binding EtapaActualTxt}"
                            Label="Etapa que cursa l'alumne"
                            LookupCommand="{Binding EtapaActualLookupCommand}"
                            ClearCommand="{Binding EtapaActualClearCommand}" />

                <controls:LookupInput Grid.Row="3" Grid.Column="1" Margin="10,5,10,5"
                            Text="{Binding CentreTxt}"
                            Label="Centre on estudia l'alumne"
                            LookupCommand="{Binding CentreLookupCommand}"
                            ClearCommand="{Binding CentreClearCommand}" />

                <!-- 4 -->

                <controls:DateInput Grid.Row="4" Grid.Column="0" Margin="10,5,10,5"
                            DateText="{Binding DataInformeNESENEETxt}"
                            Label="Data informe NESE NEE (dd.mm.aaaa)" />

                <TextBox Grid.Row="4" Grid.Column="1" Margin="10,5,10,5"
                            Text="{Binding ObservacionsNESENEE}"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            UseFloatingWatermark="True"
                            Classes="Filled"
                            wpf:TextFieldAssist.Label="Observacions NESE NEE" />

                <!-- 5 -->

                <controls:DateInput Grid.Row="5" Grid.Column="0" Margin="10,5,10,5"
                            DateText="{Binding DataInformeNESENoNEETxt}"
                            Label="Data informe NESE NO NEE (dd.mm.aaaa)" />

                <TextBox Grid.Row="5" Grid.Column="1" Margin="10,5,10,5"
                            Text="{Binding ObservacionsNESENoNEE}"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            UseFloatingWatermark="True"
                            Classes="Filled"
                            wpf:TextFieldAssist.Label="Observacions NESE NO NEE" />

            </Grid>

            <ItemsControl Margin="10,5,10,5" ItemsSource="{Binding BrokenRules}">            
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Classes="Error" Text="{Binding}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <material:FloatingButton Classes="Desar" IsExtended="True" Command="{Binding SubmitCommand}" Margin="10,5,10,5"/>

        </StackPanel>

    </ScrollViewer>
</Window>