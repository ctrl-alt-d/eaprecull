<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:material="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
        xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
        xmlns:assists="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
        xmlns:wpf="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
        xmlns:controls="clr-namespace:UI.ER.AvaloniaUI.Controls"
        x:Class="UI.ER.AvaloniaUI.Pages.AlumneCreateWindow"
        HorizontalContentAlignment="Stretch"
        Title="Alumne, alta"        
        Width="1100" Height="600" MinWidth="720"
        WindowStartupLocation="CenterOwner"
        >

    <Grid>
    <ScrollViewer>
        <StackPanel Orientation="Vertical"
                    Margin="24, 20">

            <!-- ==================== DADES PERSONALS ==================== -->
            <Border Background="#F5F7FA" CornerRadius="8" Padding="20" Margin="0,0,0,16"
                    BorderBrush="#E0E0E0" BorderThickness="1">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <avalonia:MaterialIcon Kind="AccountOutline" Width="22" Height="22" 
                                               Foreground="{DynamicResource PrimaryHueMidBrush}" Margin="0,0,10,0"/>
                        <TextBlock Text="Dades personals" Classes="Subtitle1" FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    </StackPanel>
                    <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="1*,1*">
                        <TextBox Grid.Row="0" Grid.Column="0" Margin="6,4"
                                    Text="{Binding Nom}"
                                    UseFloatingWatermark="True"
                                    Classes="Filled"
                                    wpf:TextFieldAssist.Label="Nom" />
                        <TextBox Grid.Row="0" Grid.Column="1" Margin="6,4"
                                    Text="{Binding Cognoms}"
                                    UseFloatingWatermark="True"
                                    Classes="Filled"
                                    wpf:TextFieldAssist.Label="Cognoms" />
                        <controls:DateInput Grid.Row="1" Grid.Column="0" Margin="6,4"
                                    DateText="{Binding DataNaixementTxt}"
                                    Label="Data naixement (dd.mm.aaaa)" />
                        <TextBox Grid.Row="1" Grid.Column="1" Margin="6,4"
                                    Text="{Binding Tags}"
                                    UseFloatingWatermark="True"
                                    Classes="Filled"
                                    wpf:TextFieldAssist.Label="Tags (paraules clau per cercar)" />
                    </Grid>
                </StackPanel>
            </Border>

            <!-- ==================== DADES ACADÈMIQUES ==================== -->
            <Border Background="#F5F7FA" CornerRadius="8" Padding="20" Margin="0,0,0,16"
                    BorderBrush="#E0E0E0" BorderThickness="1">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <avalonia:MaterialIcon Kind="SchoolOutline" Width="22" Height="22" 
                                               Foreground="{DynamicResource PrimaryHueMidBrush}" Margin="0,0,10,0"/>
                        <TextBlock Text="Dades acadèmiques" Classes="Subtitle1" FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    </StackPanel>
                    <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="1*,1*">
                        <controls:LookupInput Grid.Row="0" Grid.Column="0" Margin="6,4"
                                    Text="{Binding CursDarreraActualitacioDadesTxt}"
                                    Label="Curs Darrera Actualització Dades"
                                    LookupCommand="{Binding CursDarreraActualitacioDadesLookupCommand}"
                                    ClearCommand="{Binding CursDarreraActualitacioDadesClearCommand}" />
                        <TextBox Grid.Row="0" Grid.Column="1" Margin="6,4"
                                    Text="{Binding NivellActual}"
                                    UseFloatingWatermark="True"
                                    Classes="Filled"
                                    wpf:TextFieldAssist.Label="Nivell actual (exs: 1, 1r, AO, ...)" />
                        <controls:LookupInput Grid.Row="1" Grid.Column="0" Margin="6,4"
                                    Text="{Binding EtapaActualTxt}"
                                    Label="Etapa que cursa l'alumne"
                                    LookupCommand="{Binding EtapaActualLookupCommand}"
                                    ClearCommand="{Binding EtapaActualClearCommand}" />
                        <controls:LookupInput Grid.Row="1" Grid.Column="1" Margin="6,4"
                                    Text="{Binding CentreTxt}"
                                    Label="Centre on estudia l'alumne"
                                    LookupCommand="{Binding CentreLookupCommand}"
                                    ClearCommand="{Binding CentreClearCommand}" />
                    </Grid>
                </StackPanel>
            </Border>

            <!-- ==================== NESE ==================== -->
            <Border Background="#FFF8E1" CornerRadius="8" Padding="20" Margin="0,0,0,16"
                    BorderBrush="#FFE0B2" BorderThickness="1">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <avalonia:MaterialIcon Kind="AlertCircleOutline" Width="22" Height="22" 
                                               Foreground="#E65100" Margin="0,0,10,0"/>
                        <TextBlock Text="NESE (Necessitats Específiques)" Classes="Subtitle1" FontWeight="SemiBold"
                                   Foreground="#E65100"/>
                    </StackPanel>
                    <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="1*,1*">
                        <controls:DateInput Grid.Row="0" Grid.Column="0" Margin="6,4"
                                    DateText="{Binding DataInformeNESENEETxt}"
                                    Label="Data informe NESE NEE (dd.mm.aaaa)" />
                        <TextBox Grid.Row="0" Grid.Column="1" Margin="6,4"
                                    Text="{Binding ObservacionsNESENEE}"
                                    AcceptsReturn="True"
                                    TextWrapping="Wrap"
                                    MinHeight="60"
                                    UseFloatingWatermark="True"
                                    Classes="Filled"
                                    wpf:TextFieldAssist.Label="Observacions NESE NEE" />
                        <controls:DateInput Grid.Row="1" Grid.Column="0" Margin="6,4"
                                    DateText="{Binding DataInformeNESENoNEETxt}"
                                    Label="Data informe NESE NO NEE (dd.mm.aaaa)" />
                        <TextBox Grid.Row="1" Grid.Column="1" Margin="6,4"
                                    Text="{Binding ObservacionsNESENoNEE}"
                                    AcceptsReturn="True"
                                    TextWrapping="Wrap"
                                    MinHeight="60"
                                    UseFloatingWatermark="True"
                                    Classes="Filled"
                                    wpf:TextFieldAssist.Label="Observacions NESE NO NEE" />
                    </Grid>
                </StackPanel>
            </Border>

            <ItemsControl Margin="10,5,10,5" ItemsSource="{Binding BrokenRules}">            
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Classes="Error" Text="{Binding}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Espai perquè el FAB no tapi contingut -->
            <Border Height="80" />

        </StackPanel>

    </ScrollViewer>

        <!-- ==================== FAB DESAR ==================== -->
        <material:FloatingButton
            HorizontalAlignment="Right" VerticalAlignment="Bottom"
            Margin="0,0,24,24"
            IsExtended="True"
            Command="{Binding SubmitCommand}"
            HotKey="Ctrl+S"
            ToolTip.Tip="Desar els canvis (Ctrl+S)">
            <material:FloatingButton.Content>
                <StackPanel Orientation="Horizontal" Height="24">
                    <Viewbox Stretch="Fill" VerticalAlignment="Stretch">
                        <avalonia:MaterialIcon Kind="ContentSave" Width="24" Height="24" />
                    </Viewbox>
                    <TextBlock Margin="8,0" Text="Desar" Classes="Subtitle2"
                               VerticalAlignment="Center" />
                </StackPanel>
            </material:FloatingButton.Content>
        </material:FloatingButton>

    </Grid>
</Window>