<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:material="clr-namespace:Material.Styles;assembly=Material.Styles"
        xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
        xmlns:assists="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
        xmlns:wpf="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
        x:Class="UI.ER.AvaloniaUI.Pages.AlumneCreateWindow"
        HorizontalContentAlignment="Stretch"
        Title="Alta nou Alumne"        
        Width="800" Height="500" MinWidth="720"
        WindowStartupLocation="CenterOwner"
        >


    <StackPanel Orientation="Vertical"
                Margin="16, 16"
                >

        <StackPanel.Styles>

        </StackPanel.Styles>                


        <TextBox Text="{Binding Nom}"
             UseFloatingWatermark="True"
             Classes="Filled"
             wpf:TextFieldAssist.Label="Nom" />

        <TextBox Text="{Binding Cognoms}"
             UseFloatingWatermark="True"
             Classes="Filled"
             wpf:TextFieldAssist.Label="Cognoms" />

        <StackPanel Orientation="Horizontal">
            <TextBox Text="{Binding CentreTxt}"
                     Width="250"
                     UseFloatingWatermark="True"
                     Classes="Classic Textbox"
                     IsReadOnly="true"
                     Focusable="false"
                     wpf:TextFieldAssist.Label="Centre actual" />
            <Button Command="{Binding CentreLookup}"
                    Classes="LookupCss Flat"  />
        </StackPanel>

        <ItemsControl Margin="10" Items="{Binding BrokenRules}">            
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Classes="Error" Text="{Binding}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <material:FloatingButton Classes="Desar" IsExtended="True" Command="{Binding SubmitCommand}"/>

    </StackPanel>

</Window>