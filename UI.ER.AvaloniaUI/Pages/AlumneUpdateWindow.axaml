<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:material="clr-namespace:Material.Styles;assembly=Material.Styles"
        xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
        xmlns:assists="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
        xmlns:wpf="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
        x:Class="UI.ER.AvaloniaUI.Pages.AlumneUpdateWindow"
        HorizontalContentAlignment="Stretch"
        Title="Edició dades Alumne"        
        Width="800" Height="500" MinWidth="720"
        WindowStartupLocation="CenterOwner"
        >

    <ScrollViewer>
        <StackPanel Orientation="Vertical"
                    Margin="16, 16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- 0 -->

                <TextBox Grid.Row="0" Grid.Column="0" Margin="10,5,10,5"
                            Text="{Binding Nom}"
                            UseFloatingWatermark="True"
                            Classes="Filled"
                            wpf:TextFieldAssist.Label="Nom" />

                <TextBox Grid.Row="0" Grid.Column="1" Margin="10,5,10,5"
                            Text="{Binding Cognoms}"
                            UseFloatingWatermark="True"
                            Classes="Filled"
                            wpf:TextFieldAssist.Label="Cognoms" />

                <!-- 1 -->

                <TextBox Grid.Row="1" Grid.Column="0" Margin="10,5,10,5"
                            Text="{Binding DataNaixementTxt}"
                            UseFloatingWatermark="True"
                            Classes="Filled"
                            wpf:TextFieldAssist.Label="Data naixement. (dd.mm.aaaa)" />

                <TextBox Grid.Row="1" Grid.Column="1" Margin="10,5,10,5"
                            Text="{Binding Tags}"
                            UseFloatingWatermark="True"
                            Classes="Filled"
                            wpf:TextFieldAssist.Label="Tags (paraules clau per cercar)" />

                <!-- 2 -->

                <Grid Grid.Row="2" Grid.Column="0" Margin="10,5,10,5" 
                      ToolTip.Tip="{Binding MissatgeAlertaCursTxt}" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <avalonia:MaterialIcon Grid.Column="0"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           Kind="AlertOutline" Width="10" Height="10" 
                                           Foreground="Red"
                                           IsVisible="{Binding MissatgeAlertaCursTxt, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                           Margin="0,0,10,0"
                                        />
                    <TextBox Text="{Binding CursDarreraActualitacioDadesTxt}"
                            Grid.Column="1" 
                            UseFloatingWatermark="True"
                            Classes="Classic Textbox"
                            IsReadOnly="true"
                            Focusable="false"
                            wpf:TextFieldAssist.Label="Curs Darrera Actualitació Dades" />
                    <Button Grid.Column="2" Command="{Binding CursDarreraActualitacioDadesLookupCommand}"
                            Classes="LookupCss Flat"  />
                    <Button Grid.Column="3" Command="{Binding CursDarreraActualitacioDadesClearCommand}"
                            Classes="ClearCss Flat"  />
                </Grid>


                <!-- 3 -->

                <Grid Grid.Row="3" Grid.Column="0" Margin="10,5,10,5"
                      ToolTip.Tip="{Binding MissatgeAlertaCursTxt}" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <avalonia:MaterialIcon Grid.Column="0"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           Kind="AlertOutline" Width="10" Height="10" 
                                           Foreground="Red"
                                           IsVisible="{Binding MissatgeAlertaCursTxt, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                           Margin="0,0,10,0"
                                        />
                    <TextBox Text="{Binding EtapaActualTxt}"
                            Grid.Column="1" 
                            UseFloatingWatermark="True"
                            Classes="Classic Textbox"
                            IsReadOnly="true"
                            Focusable="false"
                            wpf:TextFieldAssist.Label="Etapa que cursa l'alumne" />
                    <Button Grid.Column="2" Command="{Binding EtapaActualLookupCommand}"
                            Classes="LookupCss Flat"  />
                    <Button Grid.Column="3" Command="{Binding EtapaActualClearCommand}"
                            Classes="ClearCss Flat"  />
                </Grid>

                <Grid Grid.Row="3" Grid.Column="1" Margin="10,5,10,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <avalonia:MaterialIcon Grid.Column="0"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           Kind="AlertOutline" Width="10" Height="10" 
                                           Foreground="Red"
                                           IsVisible="{Binding MissatgeAlertaCursTxt, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                           Margin="0,0,10,0"
                                        />
                    <TextBox Text="{Binding CentreTxt}"
                            Grid.Column="1" 
                            UseFloatingWatermark="True"
                            Classes="Classic Textbox"
                            IsReadOnly="true"
                            Focusable="false"
                            wpf:TextFieldAssist.Label="Centre on estudia l'alumne" />
                    <Button Grid.Column="2" Command="{Binding CentreLookupCommand}"
                            Classes="LookupCss Flat"  />
                    <Button Grid.Column="3" Command="{Binding CentreClearCommand}"
                            Classes="ClearCss Flat"  />
                </Grid>

                <!-- 4 -->

                <TextBox Grid.Row="4" Grid.Column="0" Margin="10,5,10,5"
                            Text="{Binding DataInformeNESENEETxt}"
                            UseFloatingWatermark="True"
                            Classes="Filled"
                            wpf:TextFieldAssist.Label="Data informe NESE NEET (dd.mm.aaaa)" />

                <TextBox Grid.Row="4" Grid.Column="1" Margin="10,5,10,5"
                            Text="{Binding ObservacionsNESENEE}"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            UseFloatingWatermark="True"
                            Classes="Filled"
                            wpf:TextFieldAssist.Label="Observacions NESE NEET" />

                <!-- 5 -->

                <TextBox Grid.Row="5" Grid.Column="0" Margin="10,5,10,5"
                            Text="{Binding DataInformeNESENoNEETxt}"
                            UseFloatingWatermark="True"
                            Classes="Filled"
                            wpf:TextFieldAssist.Label="Data informe NESE NO NEET (dd.mm.aaaa)" />

                <TextBox Grid.Row="5" Grid.Column="1" Margin="10,5,10,5"
                            Text="{Binding ObservacionsNESENoNEE}"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            UseFloatingWatermark="True"
                            Classes="Filled"
                            wpf:TextFieldAssist.Label="Observacions NESE NO NEET" />

            </Grid>

            <ItemsControl Margin="10,5,10,5" Items="{Binding BrokenRules}">            
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Classes="Error" Text="{Binding}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <material:FloatingButton Classes="Desar" IsExtended="True" Command="{Binding SubmitCommand}" Margin="10,5,10,5"/>

        </StackPanel>

    </ScrollViewer>
</Window>