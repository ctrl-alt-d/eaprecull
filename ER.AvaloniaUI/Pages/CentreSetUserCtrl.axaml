<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:ER.AvaloniaUI.ViewModels"
             xmlns:pages="clr-namespace:ER.AvaloniaUI.Pages"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:system="clr-namespace:System;assembly=System.Runtime.Extensions"
             xmlns:styles="clr-namespace:Material.Styles;assembly=Material.Styles"
             xmlns:assists="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ER.AvaloniaUI.Pages.CentreSetUserCtrl">
    <Design.DataContext>
        <viewModels:CentresViewModel />
    </Design.DataContext>

    <ListBox Items="{Binding MyItems}" 
             SelectedItem="{Binding SelectedItem}"
             Padding="15">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <pages:CentreRowUserCtrl DataContext="{Binding}" />
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>    